{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

<h1>Liste des Utilisateurs</h1>

{% if utilisateurs is not empty %}

  
    <table class="table">
    <thread>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>email</th>
            <th>DateInscription</th>
        </tr>
    </thread>
    <tbody>
        {% for utilisateur in utilisateurs %}
        <tr>
        <td>
            <a href="{{ path('edit_utilisateur',{'id':utilisateur.id}) }}">{{utilisateur.nom}}</a>
        </td>
            <th>{{utilisateur.prenom}}</th>
            <th>{{utilisateur.email}}</th>
            <th>{{utilisateur.DateInscription|date('Y-m-d H:i:s')}}</th>
       
        </tr>
    {% endfor %}

{% else %}

    <p>Il n'y a aucun utilisateur</p>

{% endif %}


